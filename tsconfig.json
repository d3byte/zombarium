{
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "noImplicitAny": false,
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"],
      "utils/*": ["./utils/*"],
      "menu/*": ["./menu/*"],
      "services/*": ["./services/*"],
      "model/*": ["./model/*"],
      "constants/*": ["./constants/*"],
      "components/*": ["./components/*"],
      "hoc/*": ["./hoc/*"],
      "contexts/*": ["./contexts/*"],
      "hooks/*": ["./hooks/*"],
      "types/*": ["./types/*"],
      "generator/*": ["./generator/*"],
      "game/*": ["./game/*"],
      "factories/*": ["./factories/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
